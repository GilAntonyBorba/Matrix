    <div class="container mt-5">
        <h1>Deletar Evento</h1>
        <form id="deleteForm">
            <div class="mb-3">
                <label for="eventoId" class="form-label">ID do Evento</label>
                <input type="number" class="form-control" id="eventoId" required>
            </div>
            <button type="submit" class="btn btn-danger">Deletar</button>
        </form>
    </div>

    <script>
        document.getElementById('deleteForm').addEventListener('submit', async (event) => {
            event.preventDefault();
            
            const eventoId = document.getElementById('eventoId').value;

            try {
                const response = await fetch(`http://localhost:3000/deleteEvento/${eventoId}`, {
                    method: 'DELETE',
                });

                if (response.ok) {
                    alert('Evento deletado com sucesso!');
                } else {
                    const errorText = await response.text();
                    alert(`Erro ao deletar evento: ${errorText}`);
                }
            } catch (error) {
                console.error('Erro:', error);
                alert('Ocorreu um erro ao deletar o evento!');
            }
        });
    </script>



      <!-- div para exibir as AIs -->

      <div id="div-flexbox-cards" style="display: flex; justify-content: space-evenly; flex-wrap: wrap; flex-direction: row;">

      </div>

      <script>

        

        async function fetchAIs() {
          try {

            const response = await fetch('/selectAllAIsAndAgentes'); 
            if (!response.ok) throw new Error('Falha ao buscar AIs');
            
            const AIs = await response.json(); 
            console.log(AIs); 


            // Local onde serão inseridos os cards
            const divCards = document.getElementById('div-flexbox-cards');
            divCards.innerHTML = ''; // Limpa o conteúdo atual antes de adicionar novos cards

            // Para cada AI, cria um card
            AIs.forEach(AI => {
              // Cria o card com os dados da AI
              const card = document.createElement('div');
              card.classList.add('card_div_flexbox');

              let agenteInfo = '';
              if (AI.codigo_agente !== null) {
                agenteInfo = `
                  <li class="list-group-item"><p>Agente: </p><p>Sim</p></li>
                  <li class="list-group-item"><p>Código Agente: </p><p>${AI.codigo_agente}</p></li>
                  <li class="list-group-item"><p>Nível Agente: </p><p>${AI.nivel_agente}</p></li>
                  <li class="list-group-item"><p>Nível Autonomia: </p><p>${AI.nivel_autonomia}</p></li>
                `;
              } else {
                agenteInfo = `<li class="list-group-item"><p>Agente: </p><p>Não</p></li>`;
              }

              if (AI.nome_ai === "Agente Smith") {
                mediaElement = `<video autoplay muted loop class="bd-placeholder-img card-img-top">
                  <source src="video/Agent-Smith.mp4" type="video/mp4">
                  Seu navegador não suporta o vídeo.
                  </video>`;
                } else {
                  mediaElement = `<img src="/imagens/MatrixImagens/Agent-Smith.jpg" alt="AIs" class="bd-placeholder-img card-img-top">`;
              }
              
              // <img src="/imagens/MatrixImagens/MatrixPoster.jpg" alt="AIs" class="bd-placeholder-img card-img-top">
              card.innerHTML = `
                  ${mediaElement}
                  <div class="card-body">
                    <h5 class="card-title">${AI.nome_ai} (Versão: ${AI.versao_ai})</h5>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item"><p>Id: </p><p>${AI.id_ai}</p></li>
                    <li class="list-group-item"><p>Propósito: </p><p>${AI.proposito_ai}</p></li>
                    <li class="list-group-item"><p>Status: </p><p>${AI.status_ai}</p></li>
                    ${agenteInfo}
                  </ul>
                `;
              divCards.appendChild(card);
            });
          } catch (error) {
            console.error('Erro ao buscar os AIs:', error);
          }
        }

        // Chama a função para buscar e exibir os AIs quando a página carregar
        window.onload = fetchAIs;


        
      </script>
      



      
      

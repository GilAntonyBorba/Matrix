      <script>

        // document.addEventListener('DOMContentLoaded', () => {
        //     const mostrarHumanosBtn = document.getElementById('mostrarHumanosBtn');
        //     mostrarHumanosBtn.addEventListener('click', fetchHumanos);
        // });

        async function fetchHumanos() {
          try {
            // const response = await fetch('/humanos');
            // if (!response.ok) throw new Error('Falha ao buscar humanos');

            // const humanos = await response.json();
            // console.log(humanos); 

            const response = await fetch('/humanos'); 
            if (!response.ok) throw new Error('Falha ao buscar humanos');
            
            const humanos = await response.json(); 
            console.log(humanos); 


            // Local onde serão inseridos os slides
            const swiperWrapper = document.getElementById('swiper-wrapper');
            swiperWrapper.innerHTML = ''; // Limpa o conteúdo atual antes de adicionar novos slides

            // Para cada humano, cria um slide
            humanos.forEach(humano => {

              
              if (humano.tipo_imagem === 'mp4') {
                mediaElement = `<video autoplay muted loop class="bd-placeholder-img card-img-top">
                  <source src="data:video/mp4;base64,${humano.imagem}" type="video/mp4">
                  Seu navegador não suporta o vídeo.
                  </video>`;
                } else {
                  // Converte a imagem base64 para um URL de imagem, ou usa uma imagem padrão se estiver ausente
                  //permite que a imagem seja exibida diretamente na página usando a string codificada em base64.
                  const imgSrc = humano.imagem  ? `data:image/${humano.tipo_imagem};base64,${humano.imagem}` : '/imagens/MatrixImagens/MatrixPoster.jpg';
                  mediaElement = `<img src="${imgSrc}" alt="Humanos" class="bd-placeholder-img card-img-top">`;
              }

              // Cria o slide com os dados do humano
              const slide = document.createElement('div');
              slide.classList.add('swiper-slide');
              slide.innerHTML = `
                <div class="card">
                  ${mediaElement}
                  <div class="card-body">
                    <h5 class="card-title">${humano.nome_humano}</h5>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item"><p>Id: </p><p>${humano.id_humano}</p></li>
                    <li class="list-group-item"><p>Data Nascimento: </p><p>${humano.data_nascimento}</p></li>
                    <li class="list-group-item"><p>Status: </p><p>${humano.status_humano}</p></li>
                    <li class="list-group-item"><p>Resistencia: </p><p>${humano.resistencia}</p></li>
                  </ul>
                  
                </div>
              `;
              swiperWrapper.appendChild(slide);
            });

            // Inicializa o Swiper após adicionar os slides
            // new Swiper('.mySwiper', {
            //   navigation: {
            //     nextEl: '.swiper-button-next',
            //     prevEl: '.swiper-button-prev',
            //   },
            //   pagination: {
            //     el: '.swiper-pagination',
            //     clickable: true,
            //   },
            // });
          } catch (error) {
            console.error('Erro ao buscar os humanos:', error);
          }
        }

        // Chama a função para buscar e exibir os humanos quando a página carregar
        window.onload = fetchHumanos;
      </script>


      



      
      

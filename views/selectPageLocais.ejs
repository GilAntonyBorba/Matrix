      <h3 class="h3-centralizado">
        Locais Existentes
      </h3>

      <div class="container mt-5">
          <div id="div-locais" class="mt-3" style="display: flex; flex-wrap: wrap; gap: 20px;">
              <!-- Conteúdo será carregado via JavaScript -->
          </div>
      </div>

      <script>
        async function fetchLocais() {
            try {
                const response = await fetch('/selectLocais');
                if (!response.ok) {
                    throw new Error('Erro ao buscar locais');
                }
                const locais = await response.json();

                const divLocais = document.getElementById('div-locais');
                divLocais.innerHTML = ''; 

                locais.forEach(local => {
                    const card = document.createElement('div');
                    card.classList.add('card');
                    card.style.width = '18rem';
                    card.innerHTML = `
                        <div class="card-body">
                            <h5 class="card-title">${local.descricao}</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Latitude: ${local.latitude}</li>
                            <li class="list-group-item">Longitude: ${local.longitude}</li>
                            <li class="list-group-item">Descrição: ${local.descricao}</li>
                        </ul>
                    `;
                    divLocais.appendChild(card);
                });
            } catch (error) {
                console.error('Erro ao buscar locais:', error);
            }
        }

        window.onload = fetchLocais;
      </script>
